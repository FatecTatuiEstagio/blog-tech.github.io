{
  "name": "blog-tech",
  "version": "1.0.0",
  "description": "Blog do Mundo Tecnológico - Jekyll site with Tailwind CSS",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i ./assets/css/tailwind-input.css -o ./assets/css/tailwind.css --watch\" \"bundle exec jekyll serve\"",
    "build": "tailwindcss -i ./assets/css/tailwind-input.css -o ./assets/css/tailwind.css --minify",
    "build-css": "tailwindcss -i ./assets/css/tailwind-input.css -o ./assets/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.3.0"
  },
  "keywords": [
    "jekyll",
    "tailwindcss",
    "blog",
    "tech"
  ],
  "author": "Fatec Tatuí",
  "license": "MIT"
}
